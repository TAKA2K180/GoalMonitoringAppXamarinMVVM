<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base">
		<item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
	</style>

	<style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">#FF4081</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">#000000</item>
		<!--body background-->
		<item name="android:windowBackground">#ffffff</item>
		<!--selected day-->
		<item name="android:colorControlActivated">#FF4081</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">#FF4081</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">#ffffff</item>
		<!--cancel&ok-->
		<item name="android:textColor">#000000</item>
	</style>

	<style name="AppTheme" parent="MainTheme">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>
</resources>