<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalMonitoringApp.Views.GoalsListPage" Title="Goals List">
    <ContentPage.Content>
        <StackLayout>
            <!-- List view to display goals -->
            <ListView ItemsSource="{Binding Goals}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Description}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Button to create a new goal -->
            <Button Text="Add Goal" Command="{Binding AddGoalCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>