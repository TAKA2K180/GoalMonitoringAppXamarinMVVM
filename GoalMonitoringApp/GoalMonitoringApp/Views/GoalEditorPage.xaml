<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalMonitoringApp.Views.GoalEditorPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Goal Title" FontSize="Large" />
            <Entry Text="{Binding Title}" />

            <Label Text="Goal Description" FontSize="Large" />
            <Entry Text="{Binding Description}" />

            <Label Text="Target Date" FontSize="Large" />
            <DatePicker Date="{Binding TargetDate}" />

            <Label Text="Target Time" FontSize="Large" />
            <TimePicker Time="{Binding TargetTime}" />

            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Button Text="Cancel" Command="{Binding CancelCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>